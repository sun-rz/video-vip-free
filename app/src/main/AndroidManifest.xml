<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.video.vip.player">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <uses-permission android:name="android.permission.BROADCAST_CLOSE_SYSTEM_DIALOGS"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.BIND_QUICK_SETTINGS_TILE" tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.SHUTDOWN" tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.REBOOT" tools:ignore="ProtectedPermissions"/>

    <application
            android:name="com.video.vip.player.app.App"
            android:allowBackup="true"
            android:icon="@mipmap/app_logo"
            android:label="@string/app_name"
            android:logo="@mipmap/app_logo"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/app_logo"
            android:supportsRtl="true"
            android:requestLegacyExternalStorage="true"
            android:theme="@style/BaseAppTheme">
        <activity android:name="com.video.vip.player.activity.MainActivity"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.video.vip.player.activity.WebActivity"
                android:launchMode="singleTop"/>

        <activity
                android:name="com.video.vip.player.activity.RemoteWebViewlActivity"
                android:launchMode="singleTop"
                android:process=":web"/>

        <service
                android:name=".service.WebService"
                android:process=":web"/>

        <activity
                android:name="com.video.vip.player.activity.CommonActivity"
                android:configChanges="orientation|screenSize"
                android:hardwareAccelerated="true"
                android:launchMode="singleTop"/>
        <activity
                android:name="com.video.vip.player.activity.EasyWebActivity"
                android:configChanges="orientation|screenSize"
                android:launchMode="singleTop"/>

        <activity
                android:name="com.video.vip.player.activity.ContainerActivity"
                android:launchMode="singleTop"
                android:screenOrientation="fullSensor"/>
        <activity android:name=".activity.AutoHidenToolbarActivity"/>

        <activity
                android:name=".activity.NativeDownloadActivity"
                android:launchMode="singleTop"
                android:screenOrientation="fullSensor"/>

        <provider
                android:name=".provider.ServiceProvider"
                android:authorities="com.video.vip.player"/>

        <provider
                android:name=".provider.WebServiceProvider"
                android:authorities="com.video.vip.player.web"
                android:process=":web"/>

        <activity
                android:exported="true"
                android:name=".activity.ExternalActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <!--BROWSABLE指定该Activity能被浏览器安全调用-->
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                        android:host="sample.just.com"
                        android:scheme="agentweb"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.video.vip.player.activity.AppSettingActivity"/>
        <activity
                android:name="com.video.vip.player.activity.VideoPlayerActivity"
                android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
                android:hardwareAccelerated="true"
                android:screenOrientation="sensor"
        />

        <service
                android:name="com.video.vip.player.volume.VolumeTileService"
                android:label="@string/phone_volume"
                android:icon="@drawable/icon_label"
                android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <service
                android:name="com.video.vip.player.volume.MyControlCenterService"
                android:label="@string/music_volume"
                android:icon="@drawable/icon_volume"
                android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">

            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <meta-data android:name="android.service.quicksettings" android:value="@layout/volume_control"/>
    </application>

</manifest>