<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="?attr/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:titleTextColor="@android:color/white"
        app:titleTextColor="@android:color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

           <!-- <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_back"
                    android:background="@drawable/iv_back_selector"
                    android:scaleType="center"
                    android:clickable="true"
            />
                <View
                    android:id="@+id/view_line"
                    android:layout_width="1px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_toRightOf="@+id/iv_back"
                    ></View>-->
            <ImageView
                android:id="@+id/iv_finish"

                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:src="@mipmap/cha"
                android:scaleType="center"
                android:background="@drawable/iv_back_selector"
                />

            <com.video.vip.player.widget.MarqueeTextView
                    android:id="@+id/toolbar_title"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:focusable="true"
                    android:layout_centerInParent="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>


            <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_search_24"
                    android:scaleType="center"
                    android:tint="@color/white"
                    android:layout_toLeftOf="@+id/iv_jx"
                    android:background="@drawable/iv_back_selector"
            />

            <ImageView
                    android:id="@+id/iv_jx"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_jx"
                    android:scaleType="center"
                    android:tint="@color/white"
                    android:layout_toLeftOf="@+id/iv_tp"
                    android:background="@drawable/iv_back_selector"
            />

            <ImageView
                    android:id="@+id/iv_tp"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_tp"
                    android:scaleType="center"
                    android:tint="@color/white"
                    android:layout_toLeftOf="@+id/iv_more"
                    android:visibility="gone"
                    android:background="@drawable/iv_back_selector"
            />

            <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/more"
                    android:scaleType="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/iv_back_selector"
            />
        </RelativeLayout>
        <com.ferfalk.simplesearchview.SimpleSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>
    </FrameLayout>


</androidx.appcompat.widget.Toolbar>

